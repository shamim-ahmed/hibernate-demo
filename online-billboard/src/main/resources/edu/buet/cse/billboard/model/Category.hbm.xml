<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="edu.buet.cse.billboard.model.Category" table="Category">
    <id name="id" column="id" type="long">
      <generator class="increment"/>
    </id>
    
    <property name="title" column="title" type="string" not-null="true"/>
    
    <set name="adverts" table="Advert_Category" cascade="save-update">
      <key>
        <column name="category_id" not-null="true"/>
      </key>
      
      <many-to-many entity-name="edu.buet.cse.billboard.model.Advert">
        <column name="advert_id" not-null="true"/>
      </many-to-many>
    </set>
  </class>
</hibernate-mapping>