<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
          
<hibernate-mapping>
  <joined-subclass name="edu.buet.cse.hibernate.ch06.v4.model.PersonalAdvert" 
                   extends="edu.buet.cse.hibernate.ch06.v4.model.Advert" 
                   table="Personal_Ad">
    <key column="ad_id"/>
    
    <property name="dateOfBirth" column="birth_date" type="date" not-null="true"/>
    <property name="sex" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">edu.buet.cse.hibernate.ch06.v4.model.Sex</param>
      </type>
    </property>
    <property name="message" column="message" type="string" not-null="false"/>
  </joined-subclass>
</hibernate-mapping>