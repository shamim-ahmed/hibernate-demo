<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
          
<hibernate-mapping>
  <joined-subclass name="edu.buet.cse.hibernate.ch06.v4.model.PropertyAdvert"
                   extends="edu.buet.cse.hibernate.ch06.v4.model.Advert" 
                   table="Property_Ad">
    <key column="ad_id"/>
    
    <property name="state" column="state" type="string" not-null="true"/>
    <property name="zipCode" column="zip_code" type="string" not-null="true"/>
    <property name="description" column="description" type="string" not-null="false"/>
  </joined-subclass>
</hibernate-mapping>